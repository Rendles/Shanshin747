#include<stdio.h>
#include <time.h>
#include <stdlib.h>
#include <malloc.h>
double sorting_function(int *arr, int N)
{
int i, j, k, t,counter = 0 ;
for (k=N/2;k>0; k=k/2)
{
for (i=k; i<N; i++)
{
for(j=i-k; j>=0; j=j-k)
{
if (arr[j+k] >= arr[j])
{counter ++;
break;
}
else
{
t=arr[j];
arr[j]=arr[j+k];
arr[j+k]=t;
counter++;
}
}
}
}
return counter;
}
int main()
{
  clock_t start,stop;
unsigned long t;
    double rez,sr_rez = 0;
int n[15] = {1,2,3,4,5,10,20,25,30,50,75,100,250,500};
for (int f = 0 ; f <15;f++)
{
int *a;
a = (int*)malloc(n[f] * sizeof(int));
start = clock();
for (int j = 0;j <1000;j++)
{
for (int i = 0;i < n[f]; i ++)
{
a[i] = rand()%  1000 - 300;
} 
rez = sorting_function(a,n[f]);
sr_rez +=rez;
}
stop = clock();
printf("%d\n %f \n",n[f],sr_rez/1000);
sr_rez = 0;
rez = 0;
double clock_rez = (stop - start)/(double)CLOCKS_PER_SEC;
printf("%f \n",clock_rez);
start ,stop = 0;
clock_rez = 0;
}
}
